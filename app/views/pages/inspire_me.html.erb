<div class="card">
  <div class="card__body">
    <div class="empty-state">
      <div class="empty-state__content">
        <div class="empty-state__title">
          <h3><%= @text %></h3>
        </div>

        <div class="empty-state__description">
          <p><span class='pr-12'>-</span><%= @author %></p>
        </div>

        <div class="mb-48">

        </div>
        <div class="empty-state__buttons" id='show-me-more-button'>
          <button type="button" class="button button--large">show me more</button>
        </div>
      </div>

      <div class="empty-state__image"><img src='<%= @image_path %>'></div>
    </div>
  </div>
</div>

<script type="text/javascript">
  var showMeMore = document.getElementById('show-me-more-button');

  document.addEventListener('click', function() {
    location.reload();
  })
</script>
