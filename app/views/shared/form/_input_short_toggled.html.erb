<div class="form__item">
  <div class="form__wrapper">
    <div class="form__input-wrapper">
      <input id="<%= id %>" type="text" name="<%= id %>" class="form__input">
      <label for="<%= id %>" class="form__label"><%= label %></label>
    </div>
  </div>
</div>

<script type="text/javascript">
  var id = $('#<%= id %>');
  var toggleId = $('#<%= toggle_id %>');
  var funding_entry = $(id).parents('.form__item').first().hide();

  $(toggleId).parent('div').on('click', function() {
    var checked = $(toggleId).parents('.toggle')[0].classList.contains('is-checked');
    if (checked) {
      $(funding_entry).hide();
    } else {
      $(funding_entry).show();
    }
  });
</script>
