<div class="card">
  <div class="card__body shadow-input">
    <div class="empty-state">
      <div class="empty-state__content">
        <div class="empty-state__title">
          <h2><%= title %></h2>
        </div>

        <div class="empty-state__description">
          <p><%= description %></p>
        </div>

        <div class="empty-state__buttons">
          <%= link_to 'go back to feed', deeds_path, class: 'button button--large button--color-blue', data: { turbolinks: false } %>
        </div>
      </div>

      <div class="empty-state__image"><img src="/ginger-cat-typing.png"></div>
    </div>
  </div>
</div>
