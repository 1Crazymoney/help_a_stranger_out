<%= render "shared/flash" %>

<nav class="nav overflow-hidden">
  <div class="float-left">
    <%= link_to root_path do %>
      <span class="icon-audience color-orange icon--extra-large"></span>
    <% end %>
  </div>
  <ul class="float-right">
    <% if current_user %>
      <li>
        <%= link_to 'dashboard', dashboard_index_path, class: active_tab(root_path)  %>
      </li>
    <% else %>
      <li>
        <%= link_to 'home', root_path, class: active_tab(root_path)  %>
      </li>
    <% end %>
    <li>
      <%= link_to 'login', new_user_session_path, class: active_tab(new_user_session_path) unless current_user %>
    </li>
    <li>
      <%= link_to 'logout', logout_path if current_user %>
    </li>
  </ul>
</nav>
