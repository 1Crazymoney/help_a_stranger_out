<div class="card hide">
  <div class="card__body shadow-input">
    <div class="empty-state">
      <div class="empty-state__content">
        <div class="empty-state__title">
          <h2><%= title %></h2>
        </div>

        <div class="empty-state__description">
          <p><%= description %></p>
        </div>

        <div class="empty-state__buttons">
          <%= link_to 'see more', deeds_path, class: 'button button--large button--color-blue', data: { turbolinks: false } %>
          <%= link_to 'create new deed', new_deed_path, class: 'button button--large' %>
        </div>
      </div>

      <div class="empty-state__image"><img src="/spread-love.png"></div>
    </div>
  </div>
</div>
