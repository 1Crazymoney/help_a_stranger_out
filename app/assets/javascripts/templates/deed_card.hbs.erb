{{#deeds}}
  <div class="card" data-deed="{{id}}">
    <div class="card__body shadow-secondary">
      <div class="row pl-12 position-relative">
        <h3 data-title="{{id}}">{{title}}</h3>
        <div class="position-top-right row">
          <a href="/deeds/{{id}}/stories" class="button button--primary button--color-secondary read-stories-button" >Read Stories (<span data-count-stories="{{id}}"> {{count_stories}} </span>) </a>
          <a href="/stories/new?deed_id={{id}}" class="button button--primary button--color-green mark-complete-button">Mark Complete</a>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 ">
          <div class="empty-state__image callout--shadow">
            <img src="/deeds/{{thumbnail}}.png" alt="{{thumbnail}}" class="empty-state__image" data-thumbnail="{{thumbnail}}">
          </div>
          <div class="row pt-12 pl-12" class="funding-info">
            <p class="mb-0 font-medium color-green">Estimated Cost: <span data-funding-amount="{{id}}">{{funding_amount}}</span></p>
          </div>
        </div>
        <div class="col-md-8 pl-24 position-relative">
          <div class="empty-state__description">
            <p data-description="{{id}}">{{{description}}}</p>
          </div>
          <div class="card__footer pl-0 mt-12 italic">
            <p>
              <span class='color-blue'><span data-count-completed="{{id}}">{{count_completed}}</span> Completed</span>
              <span class="color-gray-light">|</span>
              <span class='color-gray'><span data-count-in-progress="{{id}}">{{count_in_progress}}</span> In Progress</span>
            </p>
          </div>
          <div class="position-bottom-left">
            <div class="smile-button">
              <span class="ml-6 icons-item icon-profile cursor-pointer color-orange vertical-middle"></span>
              <span class="icons-text">smile</span>
              <span class='color-orange' data-count-smiles-given="{{id}}">{{count_smiles_given}}</span>
            </div>
          </div>
          <div class="mt-48 position-bottom-right row">
            <div class="donate-button">
              <span class="ml-6 icons-item icon-budget cursor-pointer color-green"></span>
              <span class="icons-text">give $ to Deed Fund</span>
            </div>
            <div class="copy-deed-button">
              <span class="icons-item icon-plus cursor-pointer color-blue"></span>
              <span class="icons-text">add to My Deeds</span>
            </div>
              <div class="remove-deed-button">
                <span class="icons-item icon-remove cursor-pointer color-red"></span>
                <span class="icons-text">remove from My Deeds In Progress</span>
              </div>
          </div>
        </div>
      </div>
    </div>
    <div class="mt-48"></div>
  </div>

{{/deeds}}
